{
    "plugins": [
        "sonarjs",
        "unicorn",
        "react-hooks",
        "import"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:sonarjs/recommended",
        "plugin:unicorn/recommended",
        "plugin:react-hooks/recommended"
    ],
    "env": {
        "es2022": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "unicorn/filename-case": [
            "error",
            {
                "case": "camelCase",
                "ignore": [
                    "^.*\\.(?!(css|scss)$)[^.]+$"
                ]
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index"
                ],
                "pathGroups": [
                    {
                        "pattern": "@app/**",
                        "group": "internal"
                    },
                    {
                        "pattern": "*.{css,scss,sass,less}",
                        "group": "index",
                        "patternOptions": {
                            "nocomments": true
                        }
                    }
                ],
                "newlines-between": "always",
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                }
            }
        ]
    }
}